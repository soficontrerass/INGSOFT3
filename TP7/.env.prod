# PROD Environment Configuration
# IMPORTANT: Copy to .env and OVERRIDE with actual PROD secrets
# Never commit actual credentials - use GitHub Secrets or external secret manager

# Database
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_PROD_SECURE_PASSWORD
DB_NAME=tp7_prod_db
DB_PORT=5433

# Server
NODE_ENV=production
SERVER_PORT=8080
API_EXTERNAL_PORT=8082
CLIENT_HOST=tp7-prod.example.com

# Client
UI_PORT=3001

# API (PROD Key - replace with real production key)
WEATHERAPI_KEY=CHANGE_ME_PROD_WEATHERAPI_KEY
CLIENT_URL=https://tp7-prod.example.com
FORECAST_COUNT=10

# Data (use bind mount or managed volume in production)
PROD_DATA_PATH=/data/prod-db

# Optional: Monitoring & Logging
LOG_LEVEL=info
METRICS_ENABLED=true
